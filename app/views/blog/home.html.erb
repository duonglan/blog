<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Entries</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
	<div class="center hero-unit">
		<h1>Wellcome Blog Kute</h1>
		<h2>
			Happy land for every one
		</h2>
		<%= link_to "Signup Blog now!!!", signup_path, class: "btn btn-large btn-primary"%>
		<br><br>
		<%= link_to image_tag("1.jpg",alt: "nice"), 'http://blogviet.com.vn/' %> 
	</div>
<% end %>